{%- liquid
  assign heights = 'adapt,small,medium,large' | split: ','
  assign height = heights[settings.desktop_height]
-%}

{{ 'section-full-width-image.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.desktop_height == 'adapt' -%}
    @media screen and (min-width: 750px) {
      .full-width-image--{{ height }} .full-width-image__media {
        height: {{ section.settings.mobile_height | append: 'px' }};
      }
    }
  {%- endif -%}
</style>

<section class="full-width-image color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- unless section.settings.full_width -%}
    <div class="page-width">
  {%- endunless -%}
  
  <div class="full-width-image__media{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}{% if settings.animations_reveal_on_scroll %} animate--fade-in{% endif %}">
    {%- if section.settings.image != blank -%}
      {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
        {%- assign widths = '375, 450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680' -%}
      {%- else -%}
        {%- assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' -%}
      {%- endif -%}
      
      {{ section.settings.image | image_url: width: 3840 | image_tag:
        width: section.settings.image.width,
        height: section.settings.image.height,
        class: 'full-width-image__image',
        sizes: '100vw',
        widths: widths,
        loading: 'lazy'
      }}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
  
  {%- unless section.settings.full_width -%}
    </div>
  {%- endunless -%}
</section>

{% schema %}
{
  "name": "Full Width Image",
  "tag": "section",
  "class": "section full-width-image--{{ section.settings.desktop_height }}",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "desktop_height",
      "options": [
        {
          "value": "adapt",
          "label": "Adapt to image"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "adapt",
      "label": "Desktop height"
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 100,
      "max": 500,
      "step": 10,
      "unit": "px",
      "default": 250,
      "label": "Mobile height when \"Adapt to image\" is selected"
    },
    {
      "type": "select",
      "id": "image_behavior",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "ambient",
          "label": "Ambient"
        },
        {
          "value": "fixed",
          "label": "Fixed"
        },
        {
          "value": "zoom-in",
          "label": "Zoom-in"
        }
      ],
      "default": "none",
      "label": "Image behavior",
      "info": "Adds animation effects to your image"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width",
      "info": "When enabled, image spans edge-to-edge. When disabled, image is contained within page width."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1",
      "info": "Applied to section background when image doesn't fill space"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Full Width Image",
      "category": "Image"
    }
  ]
}
{% endschema %}