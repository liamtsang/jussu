{% comment %}
  Fixed Bottom Navigation
  Left side: Menu items (vertical stack)
  Right side: Info section (logo, copyright, Instagram, year)
{% endcomment %}

<style>
  .fixed-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: {{ section.settings.z_index }};
    pointer-events: none;
  }

  .fixed-bottom-nav__container {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    max-width: 100%;
    padding: 0;
    margin: 0 auto;
  }

  /* Left Navigation Menu */
  .fixed-bottom-nav__menu {
    position: relative;
    bottom: {{ section.settings.offset_bottom }}px;
    left: {{ section.settings.offset_left }}px;
    pointer-events: auto;
  }

  .fixed-bottom-nav__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.menu_item_spacing }}px;
  }

  .fixed-bottom-nav__menu-item {
    margin: 0;
    line-height: 1.2rem;
  }

  .fixed-bottom-nav__menu-link {
    display: inline-block;
    padding: 0;
    background-color: transparent;
    color: {{ section.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.menu_font_size }}px;
    font-weight: {{ section.settings.menu_font_weight }};
    transition: all {{ section.settings.transition_speed }}ms ease;
    white-space: nowrap;
    text-transform: uppercase;
  }

  .fixed-bottom-nav__menu-link:hover,
  .fixed-bottom-nav__menu-link:focus {
    text-decoration: underline;
  }

  .fixed-bottom-nav__menu-link:focus {
    /*outline: 2px solid {{ section.settings.menu_text_color }};
    outline-offset: 2px;*/
  }

  /* Submenu styles */
  .fixed-bottom-nav__submenu-wrapper {
    position: relative;
  }

  .fixed-bottom-nav__submenu-wrapper > summary {
    display: inline-block;
    padding: 0;
    background-color: transparent;
    color: {{ section.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.menu_font_size }}px;
    font-weight: {{ section.settings.menu_font_weight }};
    transition: all {{ section.settings.transition_speed }}ms ease;
    white-space: nowrap;
    text-transform: uppercase;
    cursor: pointer;
    list-style: none;
  }

  .fixed-bottom-nav__submenu-wrapper > summary::-webkit-details-marker {
    display: none;
  }

  .fixed-bottom-nav__submenu-wrapper > summary::marker {
    display: none;
    content: '';
  }

  .fixed-bottom-nav__submenu-wrapper > summary:hover,
  .fixed-bottom-nav__submenu-wrapper > summary:focus {
    text-decoration: underline;
  }

  .fixed-bottom-nav__submenu-wrapper > summary:focus {
    /*outline: 2px solid {{ section.settings.menu_text_color }};
    outline-offset: 2px;*/
  }

  .fixed-bottom-nav__submenu-wrapper > summary .icon-caret {
    display: inline-block;
    width: 0.6em;
    height: 0.6em;
    margin-left: 0.3em;
    transition: transform {{ section.settings.transition_speed }}ms ease;
  }

  .fixed-bottom-nav__submenu-wrapper[open] > summary .icon-caret {
    transform: rotate(180deg);
  }

  .fixed-bottom-nav__submenu {
    list-style: none;
    padding: 0;
    padding-left: 0px;
    margin: 0;
    margin-top: 0px;
    padding-left: 1em;
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-top: 4px;
  }

  .fixed-bottom-nav__submenu-item {
    margin: 0;
    line-height: 1.2rem;
  }

  .fixed-bottom-nav__submenu-link {
    display: inline-block;
    padding: 0;
    background-color: transparent;
    color: {{ section.settings.menu_text_color }};
    text-decoration: none;
    font-size: {{ section.settings.menu_font_size }}px;
    font-weight: {{ section.settings.menu_font_weight }};
    transition: all {{ section.settings.transition_speed }}ms ease;
    white-space: nowrap;
    text-transform: uppercase;
  }

  .fixed-bottom-nav__submenu-link:hover,
  .fixed-bottom-nav__submenu-link:focus {
    text-decoration: underline;
    opacity: 1;
  }

  .fixed-bottom-nav__submenu-link:focus {
    outline: 2px solid {{ section.settings.menu_text_color }};
    outline-offset: 2px;
  }

  /* Right Info Section */
  .fixed-bottom-nav__info {
    position: relative;
    bottom: {{ section.settings.offset_bottom }}px;
    right: {{ section.settings.offset_right }}px;
    pointer-events: auto;
  }

  .fixed-bottom-nav__info-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    text-align: right;
    gap: {{ section.settings.info_item_spacing }}px;
  }

  .fixed-bottom-nav__info-item {
    margin: 0;
    padding: 0;
    background-color: transparent;
    color: {{ section.settings.info_text_color }};
    font-size: {{ section.settings.info_font_size }}px;
    font-weight: {{ section.settings.info_font_weight }};
    transition: all {{ section.settings.transition_speed }}ms ease;
    line-height: 1.2rem;
  }

  .fixed-bottom-nav__info-link {
    color: inherit;
    text-decoration: none;
    transition: opacity {{ section.settings.transition_speed }}ms ease;
  }

  .fixed-bottom-nav__info-link:hover,
  .fixed-bottom-nav__info-link:focus {
    opacity: 0.7;
    text-decoration: underline;
  }

  .fixed-bottom-nav__info-link:focus {
    outline: 2px solid {{ section.settings.info_text_color }};
    outline-offset: 2px;
  }

  /* Logo styling */
  .fixed-bottom-nav__logo {
    margin-bottom: {{ section.settings.logo_spacing }}px;
    padding: 0;
    background-color: transparent;
  }

  .fixed-bottom-nav__logo-image {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    display: block;
  }

  /* Special styling for copyright and social */
  .fixed-bottom-nav__info-item--icon {
    display: flex;
    align-items: center;
    gap: 6px;
    justify-content: flex-end;
  }

  .fixed-bottom-nav__info-item--year {
    font-weight: 500;
  }

  /* Hide mobile-only elements on desktop/tablet */
  .fixed-bottom-nav__mobile-wrapper {
    display: none;
  }

  /* Tablet styles (750px - 1023px) */
  @media screen and (max-width: 1023px) and (min-width: 750px) {
    .fixed-bottom-nav__container {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }

    .fixed-bottom-nav__menu {
      left: 50%;
      transform: translateX(-50%);
      bottom: {{ section.settings.offset_bottom | times: 0.75 }}px;
    }

    .fixed-bottom-nav__menu-list {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .fixed-bottom-nav__info {
      right: 50%;
      transform: translateX(50%);
      bottom: {{ section.settings.offset_bottom | times: 0.5 }}px;
    }

    .fixed-bottom-nav__info-list {
      flex-direction: row;

      align-items: center;
      text-align: center;
    }

    .fixed-bottom-nav__menu-link,
    .fixed-bottom-nav__info-item {
      font-size: {{ section.settings.menu_font_size | times: 0.9 }}px;
    }
  }

  /* Mobile styles (<750px) */
  @media screen and (max-width: 749px) {
    {% if section.settings.hide_on_mobile %}
      .fixed-bottom-nav {
        display: none;
      }
      .fixed-bottom-nav__mobile-wrapper {
        display: none;
      }
    {% else %}
      .fixed-bottom-nav__container {
        display: none;
      }

      .fixed-bottom-nav__mobile-wrapper {
        display: block;
        pointer-events: auto;
      }

      /* Trigger button (summary) */
      .fixed-bottom-nav__mobile-trigger {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 14px 20px;
        background: rgb(var(--color-background));
        color: {{ section.settings.menu_text_color }};
        font-size: {{ section.settings.menu_font_size }}px;
        font-weight: {{ section.settings.menu_font_weight }};
        text-transform: uppercase;
        letter-spacing: 0.1em;
        border: none;
        border-top: 1px solid rgba(var(--color-foreground), 0.08);
        cursor: pointer;
        z-index: 4;
        list-style: none;
      }

      .fixed-bottom-nav__mobile-trigger::-webkit-details-marker {
        display: none;
      }

      .fixed-bottom-nav__mobile-trigger::marker {
        display: none;
        content: '';
      }

      /* Icon container */
      .fixed-bottom-nav__mobile-icon {
        display: flex;
        align-items: center;
        width: 20px;
        height: 20px;
      }

      .fixed-bottom-nav__mobile-icon svg {
        width: 20px;
        height: 20px;
      }

      /* Icon swap: hamburger visible by default, close when open */
      .fixed-bottom-nav__mobile-icon .icon-close {
        display: none;
      }

      .fixed-bottom-nav__mobile-details[open] .fixed-bottom-nav__mobile-icon .icon-close {
        display: block;
      }

      .fixed-bottom-nav__mobile-details[open] .fixed-bottom-nav__mobile-icon .icon-hamburger {
        display: none;
      }

      /* During close animation, revert to hamburger */
      .js .fixed-bottom-nav__mobile-details[open]:not(.menu-opening) .fixed-bottom-nav__mobile-icon .icon-close {
        display: none;
      }

      .js .fixed-bottom-nav__mobile-details[open]:not(.menu-opening) .fixed-bottom-nav__mobile-icon .icon-hamburger {
        display: block;
      }

      /* Backdrop overlay via summary::before */
      .js .fixed-bottom-nav__mobile-trigger::before,
      .js .fixed-bottom-nav__mobile-details[open]:not(.menu-opening) > .fixed-bottom-nav__mobile-trigger::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(var(--color-foreground), 0.5);
        opacity: 0;
        visibility: hidden;
        z-index: -1;
        cursor: default;
        transition: opacity 0s, visibility 0s;
      }

      .fixed-bottom-nav__mobile-details[open] > .fixed-bottom-nav__mobile-trigger::before {
        visibility: visible;
        opacity: 1;
        transition: opacity var(--duration-default, 0.3s) ease, visibility var(--duration-default, 0.3s) ease;
      }

      /* Drawer panel */
      .fixed-bottom-nav__mobile-drawer {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        max-height: 85vh;
        background: rgb(var(--color-background));
        transform: translateY(100%);
        visibility: hidden;
        z-index: 3;
        overflow-y: auto;
        padding: 24px 24px 70px;
        transition: transform 0s, visibility 0s;
      }

      .js .fixed-bottom-nav__mobile-details[open] > .fixed-bottom-nav__mobile-drawer {
        transition: transform var(--duration-default, 0.3s) ease, visibility var(--duration-default, 0.3s) ease;
      }

      .js .fixed-bottom-nav__mobile-details[open].menu-opening > .fixed-bottom-nav__mobile-drawer {
        transform: translateY(0);
        visibility: visible;
      }

      /* Drawer interior: menu links */
      .fixed-bottom-nav__mobile-drawer .fixed-bottom-nav__menu-list {
        flex-direction: column;
        gap: {{ section.settings.menu_item_spacing }}px;
      }

      .fixed-bottom-nav__mobile-drawer .fixed-bottom-nav__menu-link {
        display: inline-block;
        text-align: left;
        width: auto;
        font-size: {{ section.settings.menu_font_size }}px;
      }

      /* Drawer interior: divider */
      .fixed-bottom-nav__mobile-drawer-divider {
        border: none;
        border-top: 1px solid rgba(var(--color-foreground), 0.1);
        margin: 16px 0;
      }

      /* Drawer interior: info items */
      .fixed-bottom-nav__mobile-drawer-info {
        display: flex;
        flex-direction: column;
        gap: {{ section.settings.info_item_spacing }}px;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .fixed-bottom-nav__mobile-drawer-info .fixed-bottom-nav__info-item {
        text-align: left;
        font-size: {{ section.settings.info_font_size }}px;
      }

      .fixed-bottom-nav__mobile-drawer-info .fixed-bottom-nav__info-item--icon {
        justify-content: flex-start;
      }
    {% endif %}
  }

  /* Desktop only (1024px+) */
  @media screen and (min-width: 1024px) {
    .fixed-bottom-nav__menu-link:hover {
    }
  }
</style>

<nav class="fixed-bottom-nav" aria-label="Fixed bottom navigation" role="navigation">
  <div class="fixed-bottom-nav__container">

    {% comment %} Left Menu Section {% endcomment %}
    {% if section.settings.menu != blank %}
      <div class="fixed-bottom-nav__menu">
        <ul class="fixed-bottom-nav__menu-list" role="list">
          {% for link in linklists[section.settings.menu].links %}
            <li class="fixed-bottom-nav__menu-item">
              {% if link.links != blank %}
                {% comment %} Menu item with submenu {% endcomment %}
                <details class="fixed-bottom-nav__submenu-wrapper">
                  <summary>
                    {{ link.title }}
                  </summary>
                  <ul class="fixed-bottom-nav__submenu" role="list">
                    {% for childlink in link.links %}
                      <li class="fixed-bottom-nav__submenu-item">
                        <a
                          href="{{ childlink.url }}"
                          class="fixed-bottom-nav__submenu-link"
                          {% if childlink.current %}aria-current="page"{% endif %}
                        >
                          {{ childlink.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </details>
              {% else %}
                {% comment %} Simple menu link {% endcomment %}
                <a
                  href="{{ link.url }}"
                  class="fixed-bottom-nav__menu-link"
                  {% if link.current %}aria-current="page"{% endif %}
                >
                  {{ link.title }}
                </a>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {% comment %} Right Info Section {% endcomment %}
    <div class="fixed-bottom-nav__info">
      <ul class="fixed-bottom-nav__info-list" role="list">

        {% comment %} Logo Image {% endcomment %}
        {% if section.settings.logo_image != blank %}
        <a href="/" class="fixed-bottom-nav__logo">
          <li class="fixed-bottom-nav__logo">
            <img
              src="{{ section.settings.logo_image | image_url: width: section.settings.logo_width }}"
              alt="{{ section.settings.logo_alt | default: shop.name }}"
              class="fixed-bottom-nav__logo-image"
              width="{{ section.settings.logo_width }}"
              height="auto"
              loading="lazy"
            >
          </li>
        </a>

        {% endif %}

        {% comment %} Copyright Text {% endcomment %}
        {% if section.settings.show_copyright %}
          <li class="fixed-bottom-nav__info-item">
            © {{ section.settings.copyright_text | default: shop.name }}
          </li>
        {% endif %}

        {% comment %} Instagram Handle {% endcomment %}
        {% if section.settings.instagram_handle != blank %}
          <li class="fixed-bottom-nav__info-item fixed-bottom-nav__info-item--icon">
            {% if section.settings.instagram_link != blank %}
              <a href="{{ section.settings.instagram_link }}" class="fixed-bottom-nav__info-link" target="_blank" rel="noopener noreferrer" aria-label="Visit our Instagram page">
                <span aria-hidden="true">IG</span> {{ section.settings.instagram_handle }}
              </a>
            {% else %}
              <span aria-hidden="true">IG</span> {{ section.settings.instagram_handle }}
            {% endif %}
          </li>
        {% endif %}

        {% comment %} Year {% endcomment %}
        {% if section.settings.show_year %}
          <li class="fixed-bottom-nav__info-item fixed-bottom-nav__info-item--year">
            {{ section.settings.custom_year | default: 'now' | date: '%Y' }}
          </li>
        {% endif %}

        {% comment %} Custom Info Blocks {% endcomment %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text_item' %}
              <li class="fixed-bottom-nav__info-item" {{ block.shopify_attributes }}>
                {% if block.settings.link != blank %}
                  <a href="{{ block.settings.link }}" class="fixed-bottom-nav__info-link">
                    {{ block.settings.text }}
                  </a>
                {% else %}
                  {{ block.settings.text }}
                {% endif %}
              </li>

            {% when 'html_item' %}
              <li class="fixed-bottom-nav__info-item" {{ block.shopify_attributes }}>
                {{ block.settings.html_content }}
              </li>
          {% endcase %}
        {% endfor %}

      </ul>
    </div>

  </div>

  {% comment %} Mobile Slide-Out Drawer {% endcomment %}
  <menu-drawer class="fixed-bottom-nav__mobile-wrapper" data-breakpoint="mobile">
    <details class="fixed-bottom-nav__mobile-details">
      <summary class="fixed-bottom-nav__mobile-trigger" aria-label="Menu">
        <span class="fixed-bottom-nav__mobile-icon">
          {{- 'icon-hamburger.svg' | inline_asset_content -}}
          {{- 'icon-close.svg' | inline_asset_content -}}
        </span>
        <span>MENU</span>
      </summary>
      <div class="fixed-bottom-nav__mobile-drawer">

        {% comment %} Menu Links {% endcomment %}
        {% if section.settings.menu != blank %}
          <ul class="fixed-bottom-nav__menu-list" role="list">
            {% for link in linklists[section.settings.menu].links %}
              <li class="fixed-bottom-nav__menu-item">
                {% if link.links != blank %}
                  <details class="fixed-bottom-nav__submenu-wrapper">
                    <summary>
                      {{ link.title }}
                    </summary>
                    <ul class="fixed-bottom-nav__submenu" role="list">
                      {% for childlink in link.links %}
                        <li class="fixed-bottom-nav__submenu-item">
                          <a
                            href="{{ childlink.url }}"
                            class="fixed-bottom-nav__submenu-link"
                            {% if childlink.current %}aria-current="page"{% endif %}
                          >
                            {{ childlink.title }}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  </details>
                {% else %}
                  <a
                    href="{{ link.url }}"
                    class="fixed-bottom-nav__menu-link"
                    {% if link.current %}aria-current="page"{% endif %}
                  >
                    {{ link.title }}
                  </a>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}

        <hr class="fixed-bottom-nav__mobile-drawer-divider">

        {% comment %} Info Items {% endcomment %}
        <ul class="fixed-bottom-nav__mobile-drawer-info" role="list">
          {% if section.settings.logo_image != blank %}
            <li class="fixed-bottom-nav__info-item">
              <a href="/">
                <img
                  src="{{ section.settings.logo_image | image_url: width: section.settings.logo_width }}"
                  alt="{{ section.settings.logo_alt | default: shop.name }}"
                  class="fixed-bottom-nav__logo-image"
                  width="{{ section.settings.logo_width }}"
                  height="auto"
                  loading="lazy"
                >
              </a>
            </li>
          {% endif %}

          {% if section.settings.show_copyright %}
            <li class="fixed-bottom-nav__info-item">
              &copy; {{ section.settings.copyright_text | default: shop.name }}
            </li>
          {% endif %}

          {% if section.settings.instagram_handle != blank %}
            <li class="fixed-bottom-nav__info-item fixed-bottom-nav__info-item--icon">
              {% if section.settings.instagram_link != blank %}
                <a href="{{ section.settings.instagram_link }}" class="fixed-bottom-nav__info-link" target="_blank" rel="noopener noreferrer" aria-label="Visit our Instagram page">
                  <span aria-hidden="true">IG</span> {{ section.settings.instagram_handle }}
                </a>
              {% else %}
                <span aria-hidden="true">IG</span> {{ section.settings.instagram_handle }}
              {% endif %}
            </li>
          {% endif %}

          {% if section.settings.show_year %}
            <li class="fixed-bottom-nav__info-item fixed-bottom-nav__info-item--year">
              {{ section.settings.custom_year | default: 'now' | date: '%Y' }}
            </li>
          {% endif %}

          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'text_item' %}
                <li class="fixed-bottom-nav__info-item" {{ block.shopify_attributes }}>
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" class="fixed-bottom-nav__info-link">
                      {{ block.settings.text }}
                    </a>
                  {% else %}
                    {{ block.settings.text }}
                  {% endif %}
                </li>
              {% when 'html_item' %}
                <li class="fixed-bottom-nav__info-item" {{ block.shopify_attributes }}>
                  {{ block.settings.html_content }}
                </li>
            {% endcase %}
          {% endfor %}
        </ul>

      </div>
    </details>
  </menu-drawer>

</nav>

{% schema %}
{
  "name": "Fixed Bottom Navigation",
  "tag": "section",
  "class": "section-fixed-bottom-nav",
  "settings": [
    {
      "type": "header",
      "content": "Menu Settings"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu",
      "info": "Select which menu to display in the left navigation"
    },
    {
      "type": "header",
      "content": "Position & Spacing"
    },
    {
      "type": "range",
      "id": "offset_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom offset",
      "default": 20
    },
    {
      "type": "range",
      "id": "offset_left",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Left offset (menu)",
      "default": 20
    },
    {
      "type": "range",
      "id": "offset_right",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Right offset (info)",
      "default": 20
    },
    {
      "type": "range",
      "id": "z_index",
      "min": 10,
      "max": 1000,
      "step": 10,
      "label": "Z-index",
      "default": 100,
      "info": "Controls layering priority"
    },
    {
      "type": "header",
      "content": "Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Displayed at the top of the info section"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo alt text",
      "default": "Logo",
      "info": "Describe the logo for accessibility"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 30,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Logo width",
      "default": 80
    },
    {
      "type": "range",
      "id": "logo_spacing",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Logo bottom spacing",
      "default": 8
    },
    {
      "type": "header",
      "content": "Menu Styling"
    },
    {
      "type": "color",
      "id": "menu_text_color",
      "label": "Menu text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "menu_font_size",
      "min": 10,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Menu font size",
      "default": 14
    },
    {
      "type": "select",
      "id": "menu_font_weight",
      "label": "Menu font weight",
      "options": [
        {
          "value": "300",
          "label": "Light"
        },
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi-bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
